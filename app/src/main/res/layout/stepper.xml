<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stepperRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="10dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/roleStepper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle_one"
        android:layout_alignParentStart="true"
        android:text="@string/choose_role"
        android:textColor="#000" />

    <TextView
        android:id="@+id/stepperTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle_two"
        android:layout_alignParentEnd="true"
        android:text="@string/enter_your_information"
        android:textColor="#dbdbdb" />

    <View
        android:id="@+id/circle_two"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@+id/line_one"
        android:background="@drawable/ic_stepper_circle" />


    <View
        android:id="@+id/circle_one"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_checked_stepper_circle" />

    <View
        android:id="@+id/line_one"
        android:layout_width="250dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/circle_one"
        android:background="@drawable/ic_line" />


</RelativeLayout>